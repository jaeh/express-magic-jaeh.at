@import mixins
@import reset

@font-face
  font-family 'Ubuntu'
  font-style normal
  font-weight 400
  src local('Ubuntu'), url(/font/ubuntu-monospace-ext.woff2) format('woff2')
  unicode-range U+0100-024F, U+1E00-1EFF, U+20A0-20AB, U+20AD-20CF, U+2C60-2C7F, U+A720-A7FF

@font-face
  font-family 'Ubuntu'
  font-style normal
  font-weight 400
  src local('Ubuntu'), url(/font/ubuntu-monospace.woff2) format('woff2')
  unicode-range U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215, U+E0FF, U+EFFD, U+F000

body_color = #fefefe
body_bg_color = #010101
a_color = #F79F3F

html,
body
  display inline-block

body
  background-color body_bg_color
  font-family Ubuntu, monospace
  font-size 18px
  height 100%
  line-height 1.3em
  margin 0 auto
  padding .5em 1em
  transition(background-color 0.5s)
  width 100%

  #wrapper
    color body_color
    margin 0 auto
    max-width 900px
    transition(color 0.5s)

  &.day
    background-color body_color

    #wrapper
      color body_bg_color
    
    a
      color darken(a_color, 20%)
      &:hover
        color lighten(a_color, 30%)

h1, h2, h3, h4, h5
  color a_color

a
  color a_color
  text-decoration none

  &:hover
    color lighten(a_color, 30%)

h1, h2, h3, h4, h5
  margin 1em 0 0

h1 
  font-size 1.5em
  margin 1.5em 0 .5em
h2
  font-size 1.4em
  margin 1.5em 0 .5em
h3
  font-size 1.3em
h4
  font-size 1.2em
h5
  font-size 1.1em

p
  margin .2em 0

header.main
  display inline-block
  margin 0 0 .5em
  width 100%

  img[itemprop=image]
    border-radius 100%
    float left
    margin 0 3% 0 0
    max-width 40%

  h1,
  div
    float left
    width 57%

  h1
    font-size 1.5em
    margin .5em 0

  div.jobTitle
    font-size .9em
    margin 0 0 .5em

div.description
  font-size .8em

section[itemprop=author]
  margin 0 auto
  max-width 1000px
  width 94%

section.error404
  img
    max-width 40%
    float left

div.list
  display inline-block

  li
    display inline-block
    margin 1em 0
    width 100%

    h5
      margin 0 0 .5em
      width 100%

      a
        img
          display inline
          float left
          margin 0 3% 0 0

    .content
      float left
      img
        float left
        margin 0 3% 0 0
        max-width 60px

    div[itemprop=description]
      display inline
      font-size .8em

.disclaimer
  font-size .7em

div.social
  li
    margin 0 1% 1%
    width 12%
    
    img
      width 100%

  div.emails, div.networks
    float left
    margin 1em 0

div.emails
  width 35%

  li
    display block

  a
    line-height 1.4

div.networks
  text-align right
  width 65%

  header
    clear both
    display block
    margin 0 0 .1em

    li
      display inline

      img
        width 12%
        margin 0 1%
        opacity .8
        &:hover
          opacity 1

footer.main
  margin 1em 0


pre.highlight
  border-left 11px solid lighten(body_bg_color, 20%)
  margin 1.7em 0 1.7em .3em
  overflow auto
  padding .1em .5em .3em .7em
  width 93%
  background-color body_color
  transition(background-color 0.5s)
  text-align left

  code 
    font-size .8em
    line-height 1.6em

body.day
  pre.highlight
    border-color lighten(body_bg_color, 20%)
    background-color body_bg_color
    code
      color body_color

code, samp, kbd
  color lighten(body_bg_color, 20%)
  font-family "Courier New", Courier, monospace, sans-serif
  text-align left
  transition(color 0.5s)

.dirview
  ul
    ul
      margin 0 1em


.testimonial
  background-color #ff9d1c
  border-radius 9px
  box-shadow 2px 3px 10px #999
  color #fff
  font-size .8em
  margin 1em auto
  padding .5em
  text-align center
  width 80%

  p
    font-size .7em
    font-style italic
    text-align right
    line-height 1.3em
    margin 0

.noselect
  user-select(none)

footer.main
  display inline-block
  margin 0
  width 100%
  text-align center
  font-size .7em

  nav ul li
    display inline
    padding 0 .5em
    border-right 1px solid a_color
    &:first-child
      border-left 1px solid a_color

@media (max-width: 800px)
  body
    font-size 17px
  section.author
    div.affiliations 
      li 
        header,
        .content
          width 100%

@media (max-width: 600px)
  body
    font-size 16px

@media (max-width: 500px)
  body
    font-size 15px

  header.main
    div.description
      margin 1em 0

  section.author
    div.email,
    div.networks
      width 100%

@media (max-width: 420px)
  body
    font-size 15px
    text-align center
  
  header.main
    h1,
    div,
    div.description,
    img[itemprop=image]
      width 100%
      max-width 100%

  div.list
    li
      .content
        img
          max-width 100%
          width 30%
          float none
      div[itemprop=description]
        display block

  div.emails
    width 100%
    float none
    li
      display inline
      margin 0
      padding 0 4% 0
      
      &:first-child
        border-right 1px solid a_color

  div.networks
    text-align center

  section.author
    div.networks
      clear both
      margin 0 0 1em
      max-width 100%
      width 100%

      header
        margin 1em 0 .1em
    h2
      display inherit
      width 65%

  section.error404
    img
      max-width 100%
      width 100%

#daynight-container
  display inline-block
  position absolute
  top 0.5em
  right 0.5em
  
  a
    cursor pointer
