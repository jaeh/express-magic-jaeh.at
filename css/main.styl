@import nib
global-reset()

$body-color = #010101
$body-bg-color = #fefefe

$a-color = #F79F3F
$a-color-hover = #FF8500

html,
body
  display inline-block
  left 0
  min-height 100%
  position absolute
  top 0
  width 100%

body
  background-color $body-bg-color
  font-family Ubuntu, 'Segoe UI', 'Lucida Grande', Helvetica, sans-serif
  font-size 14px
  line-height 1.3em
  padding 0 0 .5em

a,
.link-color
  color $a-color

  &:hover
    color $a-color-hover

.wrapper
  margin 2em auto
  width 600px

h1
  font-size 1.5em
  line-height 1.5

h2
  font-size 1.2em
  line-height 1.5

div.contact
  margin .5em 0 0

section
  height 90vh
  padding 5vh 0

  &#about
    .image-container
      display block
      float left
      height 200px
      margin 0 2em 0 0
      position relative
      width 200px

      &:hover
        img
          transition opacity .5s

          &:first-child
            opacity 0
          &:last-child
            opacity 1

      img
        border-radius 100%
        height 100%
        position absolute
        transition opacity .5s
        width 100%

        &:first-child
          opacity 1
        &:last-child
          opacity 0

    .text-container
      float right
